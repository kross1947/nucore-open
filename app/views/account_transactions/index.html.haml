
= content_for :tabnav do
  = render "shared/tabnav_account", secondary_tab: "lock_fund"

= content_for :h1 do
  = t('.head')

= readonly_form_for :account do |f|

  = f.input :account_number , input_html: { lable: '12312' } ,lable: '12312'
  = f.label :account_number , t(".total_locked_amount")
  = @account.account_transactions_get_total_amount

:javascript
  function PopUpMessage(){
    document.getElementById("popUpWindow").style.display = "block";
    document.getElementById("popUpWindow").style["padding-top"] = screen.height*0.3 + "px";
  }
  function ConfirmYes(){
    document.getElementById("popUpWindow").style.display = "none";
    document.getElementById("submitBtn").click();
  }
  function ConfirmNo(){
    document.getElementById("popUpWindow").style.display = "none";
  }


#popUpWindow{:style => "display: none;position: fixed; z-index: 1; padding-top: 10%; left: 0;\n  top: 0;\n  width: 100%; \n  height: 100%;\n  overflow: auto; /\n  background-color: rgb(0,0,0); \n  background-color: rgba(0,0,0,0.4);"}
  %div{:style => "  background-color: #fefefe;\n  margin: auto;\n  padding: 20px;\n  border: 1px solid #888;\n  width: 50%;"}
    %span#closeBtn{:style => "  color: #aaaaaa;\n  float: right;\n  font-size: 28px;\n  font-weight: bold; displaty : none"}
    %p Confirm create request?
    %button{:onclick => "ConfirmYes()", :type => "button", :class => "btn btn-primary"} Yes
    %button{:onclick => "ConfirmNo()", :type => "button", :class => "btn btn-primary"} No


<br>
<br>

-if is_allow_request
  = simple_form_for(AccountTransaction.new, url: account_create_account_transactions_path(@account)) do |f|
    = f.error_messages
    = f.error_notification
    = f.input :operation_type, collection: AccountTransaction.operation_types, label_method: ->(type) { t(type, scope: "account_transactions.operation_type.") }
    = f.input :operation_amount
    = f.hidden_field :account_id ,  value: @account.id
    %button{:onclick => "PopUpMessage()", :type => "button", :class => "btn btn-primary"} New request
    = f.submit t(".new_request"), class: "btn btn-primary",id:"submitBtn",style:"display:none"
-if !is_allow_request
  <div class="notice">
  %h4= t(".message.in_progrcess")
  </div>
  <br>
<br>

%table.table.table-striped.table-hover
  %thead
    %tr
      %th= t(".table.date")
      %th= t(".table.type")
      %th= t(".table.status")
      %th= t(".table.Amount")
  %tbody
    - @account.account_transactions.each  do |at|
      %tr
        %td= format_usa_datetime(at.created_at)
        %td= t("account_transactions.operation_type.#{at.operation_type}")
        %td= t("account_transactions.status.#{at.status}")
        %td= at.operation_amount
