= content_for :tabnav do
  = render "admin/shared/tabnav_payment_method", secondary_tab: "account_transaction"

= content_for :h1 do
  = current_facility

= render "sidebar"
%h2= @account
%h4= t(".total_locked_amount")
%h4= @account.account_transactions_get_total_amount



%table.table.table-striped.table-hover
  %thead
    %tr
      %th= t(".table.date")
      %th= t(".table.type")
      %th= t(".table.status")
      %th= t(".table.amount")
  %tbody
    - @account.account_transactions.each  do |at|
      %tr
        %td= format_usa_datetime(at.created_at)
        %td= t("account_transactions.operation_type.#{at.operation_type}")
        %td= t("account_transactions.status.#{at.status}")
        %td= at.operation_amount
