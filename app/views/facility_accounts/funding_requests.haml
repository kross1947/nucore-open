= content_for :tabnav do
  = render "admin/shared/tabnav_payment_method", secondary_tab: "account_transaction"

= content_for :h1 do
  = current_facility

= render "sidebar"
%h2= @account
%h4= t(".total_locked_amount")
%h4= @account.committed_amt



%table.table.table-striped.table-hover
  %thead
    %tr
      %th= t(".table.date")
      %th= t(".table.type")
      %th= t(".table.status")
      %th= t(".table.amount")
  %tbody
    - @account.funding_requests.each  do |at|
      %tr
        %td= format_usa_datetime(at.created_at)
        %td= t("funding_requests.request_type.#{at.request_type}")
        %td= t("funding_requests.status.#{at.status}")
        %td= at.request_amount
